<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp" >

    <ImageView
        android:id="@+id/image_ntf"
        android:layout_width="@dimen/_32dp"
        android:layout_height="@dimen/_32dp"
        android:src="@drawable/ic_home"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title_ntf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/image_ntf"
        app:layout_constraintStart_toEndOf="@+id/image_ntf"
        app:layout_constraintTop_toTopOf="@+id/image_ntf"
        tools:text="Custom Notification Title" />

    <TextView
        android:id="@+id/text_ntf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_ntf"
        android:textSize="12dp"
        android:textColor="@color/gray"
        android:layout_toRightOf="@id/image_ntf"
        app:layout_constraintStart_toStartOf="@+id/title_ntf"
        app:layout_constraintTop_toBottomOf="@+id/title_ntf"
        tools:text="Custom Notification Text" />
</androidx.constraintlayout.widget.ConstraintLayout>