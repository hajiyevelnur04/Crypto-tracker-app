<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".presentation.home.HomeFragment">
    <data>
        <variable
            name="viewModel"
            type="com.crypto.tracker.presentation.home.HomeViewModel" />
    </data>

    <com.crypto.tracker.utils.MultiStateView
        android:id="@+id/msv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        app:brandError="@{viewModel.brandError}"
        app:networkClickListener="@{viewModel.onClickListener}"
        app:status="@{viewModel.status}"
        app:msv_emptyView="@layout/empty_view"
        app:msv_loadingView="@layout/loading_layout">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/crypto_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            setAdapter="@{viewModel.adapter}"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:itemCount="50"
            tools:listitem="@layout/item_coin_market" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    </com.crypto.tracker.utils.MultiStateView>

</layout>
